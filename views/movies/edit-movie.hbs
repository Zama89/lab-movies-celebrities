<h2>Edit Movie{{movieEdit.title</h2>
<form action="/movies/{{movieEdit.id}}/edit" method="post">
<label for="title">title</label>
    <input type="text" name="title" value="{{movieEdit.title}}" />
    <label for="genre">genre</label>
    <input type="text" name="genre" value="{{movieEdit.genre}}" />
    <label for="plot">plot</label>
    <input type="text" name="plot" value="{{movieEdit.plot}}" />


    <label for="cast">cast
        <select name='cast' id='cast'multiple>
            {{#each movieEdit.cast}}
                 <option value="{{this.id}}">{{this.name}}</option>
            {{/each}}
        </select>
    </label>

    <button type="submit">Update Movie</button>
</form>